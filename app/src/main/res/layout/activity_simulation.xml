<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Simulation">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >
    <Button
        android:id="@+id/simulation1"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_margin="5dp"
        android:background="@color/slategray"
        android:text="Simulation 1" />

    <Button
        android:id="@+id/simulation2"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_margin="5dp"
        android:background="@color/slategray"
        android:text="Simulation 2" />

    <Button
        android:id="@+id/simulation3"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_margin="5dp"
        android:background="@color/slategray"
        android:text="Simulation 3" />

    <Button
        android:id="@+id/simulation4"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_margin="5dp"
        android:background="@color/slategray"
        android:text="Simulation 4" />
</LinearLayout>

</RelativeLayout>